<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPantalla"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="0"
        android:textColor="@color/black"
        android:gravity="right|center_vertical"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btAc"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="AC"
            android:onClick="LimpiarTodo"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/btDel"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="DEL"
            android:onClick="LimpiarDel"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/btMas"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="+"
            android:onClick="Mas"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/btMenos"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="-"
            android:onClick="Menos"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/teal_700"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt7"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="7"
            android:onClick="DigitarSiete"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/bt8"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="8"
            android:onClick="DigitarOcho"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/bt9"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="9"
            android:onClick="DigitarNueve"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/btPor"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="*"
            android:onClick="Multiplicar"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/teal_700"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt4"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="4"
            android:onClick="DigitarCuatro"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/bt5"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="5"
            android:onClick="DigitarCinco"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/bt6"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="6"
            android:onClick="DigitarSeis"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/btEntre"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="/"
            android:onClick="Entre"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/teal_700"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="1"
            android:onClick="DigitarUno"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/bt2"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="2"
            android:onClick="DigitarDos"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/bt3"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="3"
            android:onClick="DigitarTres"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/btIgual"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="="
            android:onClick="Igual"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/teal_700"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt0"
            android:layout_width="0dp"
            android:layout_weight="4.2"
            android:layout_height="50dp"
            android:text="0"
            android:onClick="DigitarCero"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:visibility="invisible"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="16dp"
            android:visibility="invisible"/>

    </LinearLayout>

</LinearLayout>